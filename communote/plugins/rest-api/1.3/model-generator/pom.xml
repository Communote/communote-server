<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>com.communote.plugins</groupId>
        <artifactId>communote-rest-api-1.3</artifactId>
        <version>3.6-SNAPSHOT</version>
        <relativePath>../pom.xml</relativePath>
    </parent>
    <artifactId>communote-rest-api-1.3-model-generator</artifactId>
    <name>Communote - Plugins - Rest-Api - 1.3 - Model Generator</name>
    <description>This module generates all sources from the model.</description>
    <properties>
        <target.server.java>${pom.basedir}/../model/src-gen/main/java</target.server.java>
        <target.server.doc>${pom.basedir}/../doc/src/site/apt/gen</target.server.doc>
        <target.client.java>${pom.basedir}/../client/src-gen/main/java</target.client.java>
    </properties>
    <build>
        <resources>
            <resource>
                <directory>src</directory>
            </resource>
        </resources>
        <plugins>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>build-helper-maven-plugin</artifactId>
                <executions>
                    <execution>
                        <id>add-source</id>
                        <phase>generate-sources</phase>
                        <goals>
                            <goal>add-source</goal>
                        </goals>
                        <configuration>
                            <sources>
                                <source>src/main/workflows</source>
                                <source>src/main/models</source>
                            </sources>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <artifactId>maven-clean-plugin</artifactId>
                <configuration>
                    <filesets>
                        <fileset>
                            <directory>${target.server.java}</directory>
                            <includes>
                                <include>**/*</include>
                            </includes>
                        </fileset>
                        <fileset>
                            <directory>${target.server.doc}</directory>
                            <includes>
                                <include>**/*</include>
                            </includes>
                        </fileset>
                        <fileset>
                            <directory>${target.client.java}</directory>
                            <includes>
                                <include>**/*</include>
                            </includes>
                        </fileset>
                    </filesets>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.fornax.toolsupport</groupId>
                <artifactId>fornax-oaw-m2-plugin</artifactId>
                <version>3.5.0</version>
                <configuration>
                    <workflowEngine>mwe2</workflowEngine>
                    <workflowDescriptor>src/main/workflows/RestWebserviceComplete.mwe2</workflowDescriptor>
                    <properties>
                        <targetDirServer>${target.server.java}</targetDirServer>
                        <targetDirDoc>${target.server.doc}</targetDirDoc>
                        <targetDirClientJava>${target.client.java}</targetDirClientJava>
                    </properties>
                </configuration>
                <dependencies>
                    <dependency>
                        <groupId>com.communote.restws</groupId>
                        <artifactId>generator</artifactId>
                        <version>1.0.26</version>
                    </dependency>
                </dependencies>
                <executions>
                    <execution>
                        <phase>generate-sources</phase>
                        <goals>
                            <goal>run-workflow</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
</project>
