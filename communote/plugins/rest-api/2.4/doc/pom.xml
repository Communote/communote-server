<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>com.communote.plugins</groupId>
        <artifactId>communote-rest-api-2.4</artifactId>
        <version>3.4</version>
        <relativePath>../pom.xml</relativePath>
    </parent>
    <artifactId>communote-rest-api-2.4-doc</artifactId>
    <name>Communote - Plugins - Rest-Api - 2.4 - Documention</name>
    <packaging>bundle</packaging>
    <build>
        <finalName>communote-rest-api-doc-${project.version}</finalName>
        <resources>
            <resource>
                <directory>target/pdf</directory>
                <targetPath>META-INF/resources/static/pdf</targetPath>
                <includes>
                    <include>*.pdf</include>
                </includes>
            </resource>
            <resource>
                <directory>target/site</directory>
                <targetPath>META-INF/resources/static</targetPath>
            </resource>
            <resource>
                <directory>src/main/resources</directory>
            </resource>
        </resources>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-site-plugin</artifactId>
                <!-- Has to be an old version. Newer versions gets stuck in an endless loop. -->
                <version>2.4</version>
                <configuration>
                    <locales>en,de</locales>
                    <inputEncoding>ISO-8859-1</inputEncoding>
                    <outputEncoding>UTF-8</outputEncoding>
                </configuration>
                <executions>
                    <execution>
                        <phase>generate-resources</phase>
                        <goals>
                            <goal>site</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-pdf-plugin</artifactId>
                <configuration>
                    <locales>en,de</locales>
                    <aggregate>true</aggregate>
                    <includeReports>true</includeReports>
                </configuration>
                <executions>
                    <execution>
                        <phase>generate-resources</phase>
                        <goals>
                            <goal>pdf</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.apache.felix</groupId>
                <artifactId>maven-bundle-plugin</artifactId>
                <extensions>true</extensions>
                <configuration>
                    <instructions>
                        <Bundle-SymbolicName>${project.artifactId}</Bundle-SymbolicName>
                    </instructions>
                </configuration>
                <executions>
                    <execution>
                        <phase>generate-classes</phase>
                        <goals>
                            <goal>manifest</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

</project>
