	<artifactId>tests-all-versions-integration</artifactId>
	<name>Communote - Tests - All Versions - Integration</name>
	<description>This module provides tests for all types of Communote which need a running Communote instance.</description>
	<properties>
        <!-- to pass your own testsuite use: mvn -DtestSuite=<path to suite> -->
        <!-- You can store your testsuites in a "testsuites" sub-directory of the current directory because it is on the ignore list-->
		<testSuite>${pom.basedir}/src/test/resources/testSuites/installer/installer.TestSuite.xml</testSuite>
		<exam.version>4.1.0</exam.version>
		<url.version>2.1.0</url.version>
        <maven.build.timestamp.format>yyyyMMdd-HHmm</maven.build.timestamp.format>
        <build.timestamp>${maven.build.timestamp}</build.timestamp>
	</properties>
	<build>
		<outputDirectory>target/classes</outputDirectory>
		<extensions>
			<extension>
				<groupId>org.postgresql</groupId>
				<artifactId>postgresql</artifactId>
				<version>${version.postgresql.jdbc}</version>
			</extension>
			<extension>
				<groupId>mysql</groupId>
				<artifactId>mysql-connector-java</artifactId>
				<version>${version.mysql.jdbc}</version>
			</extension>
			<extension>
				<groupId>net.sourceforge.jtds</groupId>
				<artifactId>jtds</artifactId>
				<version>${version.mssql.jdbc}</version>
			</extension>
			<extension>
				<groupId>com.oracle</groupId>
				<artifactId>ojdbc6</artifactId>
				<version>${version.oracle.jdbc}</version>
			</extension>
		</extensions>
		<resources>
			<resource>
				<directory>src/main/resources</directory>
				<excludes>
					<exclude>**/*.java</exclude>
				</excludes>
			</resource>
		</resources>
        <testResources>
            <testResource>
                <directory>src/test/resources</directory>
                <targetPath>${pom.basedir}/target/</targetPath>
                <filtering>true</filtering>
                <includes>
                    <include>test-data/**</include>
                </includes>
            </testResource>
            <testResource>
                <directory>src/test/resources</directory>
                <filtering>false</filtering>
                <includes>
                    <include>log4j.properties</include>
                </includes>
            </testResource>
        </testResources>
		<plugins>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>buildnumber-maven-plugin</artifactId>
                <executions>
                    <execution>
                        <phase>validate</phase>
                        <goals>
                            <goal>create</goal>
                        </goals>
                    </execution>
                </executions>
                <configuration>
                    <revisionOnScmFailure>local</revisionOnScmFailure>
                    <doCheck>false</doCheck>
                    <doUpdate>false</doUpdate>
                    <shortRevisionLength>0</shortRevisionLength>
                </configuration>
            </plugin>
			<plugin>
				<artifactId>maven-surefire-plugin</artifactId>
				<configuration>
					<trimStackTrace>false</trimStackTrace>
					<suiteXmlFiles>
						<suiteXmlFile>${testSuite}</suiteXmlFile>
					</suiteXmlFiles>
					<childDelegation>true</childDelegation>
					<systemPropertyVariables>
						<maven.local.repository>${m2.localRepository}</maven.local.repository>
                        <testBaseDirectory>${pom.basedir}/target/test-data</testBaseDirectory>
					</systemPropertyVariables>
				</configuration>
			</plugin>
		</plugins>
	</build>
